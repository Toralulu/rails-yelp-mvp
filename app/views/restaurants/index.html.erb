<h1>Restaurants</h1>

<% @restaurants.each do |restaurant| %>
  <h3><%= restaurant.name %></h3>
  <p><%= restaurant.address %></p>
  <p><%= restaurant.phone_number %>
  <p><%= restaurant.category.capitalize %></p>
  <p><%= link_to "See details", restaurant_path(restaurant.id), class: "btn btn-primary" %></p>
<% end %>
